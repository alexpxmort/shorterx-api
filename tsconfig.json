{
    "compilerOptions": {
      "target": "es2017",
          "typeRoots": [
              "./node_modules/@types",
              "./src/types"
          ],
      "lib": ["es6"],
      "module": "commonjs",
      "strict": true,
      "allowJs": true,
      "outDir": "build",
      "skipLibCheck": true,
      "noImplicitAny": true,
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
        "paths": {
        "@ports/*": ["./src/ports/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@usecases/*": ["./src/usecases/*"],
        "types/*": ["./src/types/usecases/*"],
        "@providers/*": ["./src/providers/*"],
        "@test/*": ["./test/*"],
        "@docs/*": ["./docs/*"],
      }
    },
    "include": ["./src/**/*", "./test/**/*","./config/**/*"],
    "exclude": ["node_modules", "build"],
  }
  